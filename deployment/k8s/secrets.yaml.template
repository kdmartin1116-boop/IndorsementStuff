# Use this as a template and create secrets.yaml with actual values

apiVersion: v1
kind: Secret
metadata:
  name: indorsement-secrets
  namespace: indorsement-production
  labels:
    app: indorsement
    tier: secrets
type: Opaque
stringData:
  # Database Credentials
  database-url: "postgresql://indorsement_user:CHANGE_THIS_PASSWORD@prod-postgres-cluster:5432/indorsement_prod"
  redis-url: "redis://:CHANGE_THIS_REDIS_PASSWORD@prod-redis-cluster:6379"
  
  # JWT Secrets
  jwt-secret: "CHANGE_THIS_TO_A_SECURE_256_BIT_SECRET_KEY"
  jwt-refresh-secret: "CHANGE_THIS_TO_ANOTHER_SECURE_SECRET_KEY"
  
  # OAuth Credentials
  google-client-id: "your-google-oauth-client-id"
  google-client-secret: "your-google-oauth-client-secret"
  microsoft-client-id: "your-microsoft-oauth-client-id"
  microsoft-client-secret: "your-microsoft-oauth-client-secret"
  
  # AWS Credentials
  aws-access-key-id: "your-aws-access-key-id"
  aws-secret-access-key: "your-aws-secret-access-key"
  
  # Email Service Credentials
  smtp-user: "apikey"
  smtp-pass: "your-sendgrid-api-key"
  
  # Analytics & Monitoring
  mixpanel-token: "your-mixpanel-project-token"
  sentry-dsn: "https://your-sentry-dsn@sentry.io/project-id"
  new-relic-license-key: "your-new-relic-license-key"
  google-analytics-key: "your-google-analytics-key"
  
  # AI Service API Keys
  openai-api-key: "sk-your-openai-api-key"
  azure-cognitive-key: "your-azure-cognitive-services-key"
  
  # Encryption
  encryption-key: "CHANGE_THIS_TO_A_256_BIT_ENCRYPTION_KEY"
  session-secret: "CHANGE_THIS_SESSION_SECRET"
  
  # Push Notifications
  fcm-server-key: "your-firebase-server-key"
  apns-key-id: "your-apns-key-id"
  apns-team-id: "your-apple-team-id"
  apns-private-key: |
    -----BEGIN PRIVATE KEY-----
    YOUR_APNS_PRIVATE_KEY_HERE
    -----END PRIVATE KEY-----
  
  # External Service API Keys
  westlaw-api-key: "your-westlaw-api-key"
  lexisnexis-api-key: "your-lexisnexis-api-key"
  
  # Certificate Authority (if using private CA)
  ca-cert: |
    -----BEGIN CERTIFICATE-----
    YOUR_CA_CERTIFICATE_HERE
    -----END CERTIFICATE-----

---
apiVersion: v1
kind: Secret
metadata:
  name: database-credentials
  namespace: indorsement-production
  labels:
    app: indorsement
    component: database
type: Opaque
stringData:
  username: "indorsement_user"
  password: "CHANGE_THIS_DATABASE_PASSWORD"
  host: "prod-postgres-cluster"
  port: "5432"
  database: "indorsement_prod"
  ssl-mode: "require"

---
apiVersion: v1
kind: Secret
metadata:
  name: redis-credentials
  namespace: indorsement-production
  labels:
    app: indorsement
    component: cache
type: Opaque
stringData:
  password: "CHANGE_THIS_REDIS_PASSWORD"
  host: "prod-redis-cluster"
  port: "6379"
  database: "0"

---
apiVersion: v1
kind: Secret
metadata:
  name: tls-certificates
  namespace: indorsement-production
  labels:
    app: indorsement
    component: tls
type: kubernetes.io/tls
data:
  # Base64 encoded certificate and key
  # Generate with: base64 -w 0 certificate.crt
  tls.crt: LS0tLS1CRUdJTi... # Your base64 encoded certificate
  tls.key: LS0tLS1CRUdJTi... # Your base64 encoded private key

---
apiVersion: v1
kind: Secret
metadata:
  name: ecr-registry-secret
  namespace: indorsement-production
  labels:
    app: indorsement
    component: registry
type: kubernetes.io/dockerconfigjson
data:
  .dockerconfigjson: eyJhdXRocyI6... # Your base64 encoded Docker config

---
apiVersion: v1
kind: Secret
metadata:
  name: backup-credentials
  namespace: indorsement-production
  labels:
    app: indorsement
    component: backup
type: Opaque
stringData:
  s3-access-key: "your-backup-s3-access-key"
  s3-secret-key: "your-backup-s3-secret-key"
  s3-bucket: "indorsement-backups-prod"
  encryption-key: "your-backup-encryption-key"

