{
  "version": 2,
  "name": "sovereign-legal-platform",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://api.sovereignlegal.com/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "VITE_APP_NAME": "Sovereign Legal Platform",
    "VITE_API_BASE_URL": "https://api.sovereignlegal.com"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "functions": {
    "app/api/*.js": {
      "runtime": "nodejs18.x"
    }
  }
}