  "display": "standalone",
  "background_color": "#2a5298",
  "theme_color": "#2a5298",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "en-US",
  "categories": ["business", "legal", "finance", "productivity"],
  "icons": [
