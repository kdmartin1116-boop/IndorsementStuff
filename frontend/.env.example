# ===========================================
# SOVEREIGN LEGAL PLATFORM - ENVIRONMENT CONFIG
# ===========================================

# Application Configuration
NODE_ENV=production
VITE_APP_NAME=Sovereign Legal Platform
VITE_APP_VERSION=2.0.0
VITE_APP_DESCRIPTION=Enterprise Legal Technology Platform

# API Configuration
VITE_API_BASE_URL=https://api.sovereignlegal.com
VITE_API_VERSION=v1
VITE_API_TIMEOUT=30000

# Authentication & Security
VITE_JWT_SECRET=your-super-secure-jwt-secret-key
VITE_AUTH_DOMAIN=auth.sovereignlegal.com
VITE_REFRESH_TOKEN_ENDPOINT=/auth/refresh

# Database Configuration
VITE_DB_HOST=localhost
VITE_DB_PORT=5432
VITE_DB_NAME=sovereign_legal_db
VITE_DB_USER=sovereign_user
VITE_DB_PASSWORD=secure_password

# External Services
VITE_LEXISNEXIS_API_KEY=your-lexisnexis-api-key
VITE_WESTLAW_API_KEY=your-westlaw-api-key
VITE_COURT_FILING_API_URL=https://ecf.courts.gov/api

# Cloud Storage
VITE_AWS_ACCESS_KEY_ID=your-aws-access-key
VITE_AWS_SECRET_ACCESS_KEY=your-aws-secret-key
VITE_AWS_REGION=us-east-1
VITE_S3_BUCKET=sovereign-legal-documents

# Notification Services
VITE_SENDGRID_API_KEY=your-sendgrid-api-key
VITE_TWILIO_ACCOUNT_SID=your-twilio-account-sid
VITE_TWILIO_AUTH_TOKEN=your-twilio-auth-token
VITE_PUSH_NOTIFICATION_KEY=your-push-notification-key

# Analytics & Monitoring
VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXXX
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io
VITE_MIXPANEL_TOKEN=your-mixpanel-token

# Feature Flags
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_BLOCKCHAIN=true
VITE_ENABLE_COLLABORATIVE_EDITING=true
VITE_ENABLE_ADVANCED_SEARCH=true
VITE_ENABLE_SMART_NOTIFICATIONS=true

# Performance & Caching
VITE_CACHE_DURATION=3600000
VITE_CDN_BASE_URL=https://cdn.sovereignlegal.com
VITE_ENABLE_SERVICE_WORKER=true

# Legal Compliance
VITE_HIPAA_COMPLIANCE_MODE=true
VITE_SOC2_LOGGING_ENABLED=true
VITE_AUDIT_TRAIL_ENABLED=true
VITE_DATA_ENCRYPTION_ENABLED=true

# Development Tools (only for dev/staging)
VITE_ENABLE_REDUX_DEVTOOLS=false
VITE_ENABLE_WHYRENDERER=false
VITE_BUNDLE_ANALYZER=false